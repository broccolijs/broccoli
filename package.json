    "fixturify": "^1.1.0",
    "got": "^9.0.0",
    "longjohn": "^0.2.12",
    "mocha": "^7.1.0",
    "multidep": "^2.0.2",
    "portfinder": "^1.0.25",
    "prettier": "^1.19.1",
